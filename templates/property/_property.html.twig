<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {'id': property.id, slug: property.slug}) }}">
                {{property.title}}</a>
        </h5>
        <p class="card-text">{{property.surface}}m² -
            {{property.city}}({{property.postalcode}})</p>
        <div class="text-primary" style="font-weight:bold; font-size:2em;">{{property.FormatedPrice}}
            €</div>
    </div>
</div>