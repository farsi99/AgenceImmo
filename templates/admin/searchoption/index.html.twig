{% extends 'base.html.twig' %}

{% block title 'Gerer les options' %}

    {% block body %}

        <div class="container mt-4">
            <h1>
                Gerer les options</h1>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{message}}</div>
            {% endfor %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for option in searchoptions %}
                        <tr>
                            <td>{{option.name}}
                            </td>
                            <td>
                                <a href="{{path('admin.searchoption.edit', {'id': option.id})}}" class="btn btn-secondary">Editer</a>
                                {{ include('admin/searchoption/_delete_form.html.tiwg') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="text-rigngt">
                <a href="{{path('admin.searchoption.new')}}" class="btn btn-primary">Cr√©er un nouveau</a>
            </div>

        </div>

    {% endblock %}