{{form_start(form)}}
<div class="row">
    <div class="col-md-4">{{form_row(form.title, {'label':'Titre', 'attr':{'placeholder':'Titre du bien'}})}}</div>
    <div class="col-md-4">{{form_row(form.surface,{'label':'Surface', 'attr':{'placeholder':'surface par m²'}})}}</div>
    <div class="col-md-4">{{form_row(form.price,{'label':'Prix', 'attr':{'placeholder':'Prix du bien'}})}}</div>
</div>
<div class="row">
    <div class="col-md-2">{{form_row(form.rooms,{'label':'Pièces', 'attr':{'placeholder':'Nombre de pièce'}})}}</div>
    <div class="col-md-2">{{form_row(form.bedrooms,{'label':'Chambre', 'attr':{'placeholder':'Nombre de chamre'}})}}</div>
    <div class="col-md-2">{{form_row(form.heat,{'label':'Chauffage'})}}</div>
    <div class="col-md-2">{{form_row(form.floor,{'label':'Etage', 'attr':{'placeholder':'Etage niveau'}})}}</div>
</div>
<div class="row">
    <div class="col-md-5">{{form_row(form.adresse)}}</div>
    <div class="col-md-2">{{form_row(form.city,{'label':'Ville', 'attr':{'placeholder':'La ville'}})}}</div>
    <div class="col-md-2">{{form_row(form.postal_code,{'label':'Code Postal'})}}</div>
    <div class="col-md-2">{{form_row(form.sold,{'label':'Disponibilité'})}}</div>
</div>
<div class="row">
    <div class="col-md-12">{{form_row(form.description)}}</div>
</div>
{{form_rest(form)}}
<button type="submit" class="btn btn-primary">{{button|default('Enregistrer')}}</button>
{{form_end(form)}}